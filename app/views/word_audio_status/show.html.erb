<p class="word-spelling">
  <b>Word: </b><%= @word_audio_status.spelling %><% if @word_audio_status.words.first.alt_text %>(<%= @word_audio_status.words.first.alt_text %>)<% end %>
</p>
<p>
  <b>Filename: </b><%= @word_audio_status.audio.file_name %> <i class="play-icon"></i>
</p>

<p>
  <% if @word_audio_status.audio_status.name == 'Approved' %><b>Approved by: <%= @word_audio_status.user.name %></b><% end %>
</p>

<audio id="audio" controls="" src="data:audio/mpeg;base64, <%= Base64.encode64(@word_audio_status.audio.audio) %>" hidden>
</audio>
